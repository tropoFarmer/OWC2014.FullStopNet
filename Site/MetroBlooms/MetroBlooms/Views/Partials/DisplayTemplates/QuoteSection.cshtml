@using MetroBlooms.Extensions
@model MetroBlooms.ViewModels.Sections.QuoteSection

@if (Model.Heading.IsSet())
{
    <div class="@Html.EditableClass()" @Html.EditableData(Model.Heading)>
        @Model.Heading
    </div>
}

@if (Model.Quote.IsSet())
{
    <div class="@Html.EditableClass()" @Html.EditableData(Model.Quote)>
        @Model.Quote
    </div>
}

@if (Model.Citation.IsSet())
{
    <div class="@Html.EditableClass()" @Html.EditableData(Model.Citation)>
        @Model.Citation
    </div>
}