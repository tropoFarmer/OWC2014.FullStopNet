@using MetroBlooms.Extensions
@model MetroBlooms.ViewModels.Global.FooterViewModel

<div class="siteFooter" role="contentinfo">
    <div class="siteFooter-contact">
        <div class="container">
            <div class="footerFirst">
                How Can I Help?
            </div>
            <div class="footerLast">
                <a class="btn" target="@(Model.GetInvolvedLink.NewWindow ? "_blank" : "" )" href="@Model.GetInvolvedLink.Url">@Model.GetInvolvedLink.Title</a>
            </div>
        </div> <!-- /.container -->
    </div>
    <div class="siteFooter-links">
        <div class="container">
            <div>@Html.Raw(Model.Address.Replace(Environment.NewLine, "<br/>"))</div>
            <div>@Model.Phone</div>
            <div>@Model.Email</div>
            <div>© @DateTime.Now.Year Metro Blooms</div>
            <div>
                <a target="@(Model.GetInvolvedLink.NewWindow ? "_blank" : "" )" href="@Model.PrivacyPolicy.Url">@Model.PrivacyPolicy.Title</a>
            </div>
        </div> <!-- /.container -->
    </div>
</div>