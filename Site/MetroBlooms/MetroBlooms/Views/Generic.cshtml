@model MetroBlooms.ViewModels.Generic.GenericViewModel

<div class="section">
    <div class="container">
        <div class="grid">
            <div class="grid-col grid-col_secondary">
                <ul>
                    @foreach (var link in Model.SubLinks)
                    {
                        <li><a href="@link.Url">@link.Name</a></li>
                    }
                </ul>
            </div> <!-- /.grid-col -->

            <div class="grid-col grid-col_primary">
                <div class="content">
                    <h1 class="hdg hdg_1">@Model.Title</h1>
                </div>
                @foreach (var section in Model.Sections)
                {
                    @Html.DisplayFor(x => section)
                }
            </div> <!-- /.grid-col -->
        </div> <!-- /.grid -->
    </div> <!-- /.container -->
</div> <!-- /.section -->